<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#A18AD1</item>
        <item name="colorPrimaryDark">#A18AD1</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="defaultButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/colorAccent</item>
    </style>

    <style name="urgentButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorPrimaryDark" tools:targetApi="lollipop">@color/colorPrimaryDark</item>
    </style>
</resources>